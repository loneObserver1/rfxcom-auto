[MASTER]
# Utiliser un score minimum de 7.0
min-similarity-lines=4

[MESSAGES CONTROL]
# Désactiver les messages non pertinents pour une intégration Home Assistant
disable=
    import-error,
    no-member,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    too-many-public-methods,
    too-many-return-statements,
    too-many-boolean-expressions,
    protected-access,
    duplicate-code,
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    line-too-long,
    invalid-name,
    unused-argument,
    unused-variable,
    redefined-outer-name,
    arguments-differ,
    abstract-method,
    super-init-not-called,
    fixme,
    consider-using-f-string,
    consider-using-with,
    consider-using-dict-comprehension,
    consider-using-set-comprehension,
    consider-using-generator,
    consider-using-enumerate,
    consider-using-join,
    consider-using-max-builtin,
    consider-using-min-builtin,
    consider-using-sorted,
    consider-using-in,
    consider-using-dict-items,
    trailing-whitespace,
    trailing-newlines

[FORMAT]
# Longueur maximale des lignes
max-line-length=120

[DESIGN]
# Nombre maximum d'arguments
max-args=10
# Nombre maximum d'attributs d'instance
max-attributes=15
# Nombre maximum de méthodes publiques
max-public-methods=30
# Nombre maximum de branches
max-branches=20
# Nombre maximum de retours
max-returns=10
# Nombre maximum de statements
max-statements=100

